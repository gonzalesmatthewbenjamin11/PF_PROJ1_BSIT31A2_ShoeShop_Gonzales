@model ShoeShop.Infrastructure.Entities.Shoe

@{
    ViewData["Title"] = "Delete Shoe";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle"></i> 
                    Confirm Delete
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <strong>Warning!</strong> Are you sure you want to delete this shoe? This action cannot be undone.
                </div>
                
                <h4>Shoe Information</h4>
                <dl class="row">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>
                    
                    <dt class="col-sm-3">Brand</dt>
                    <dd class="col-sm-9">@Model.Brand</dd>
                    
                    <dt class="col-sm-3">Price</dt>
                    <dd class="col-sm-9">$@Model.Price.ToString("F2")</dd>
                    
                    <dt class="col-sm-3">Stock</dt>
                    <dd class="col-sm-9">@Model.Stock units</dd>
                    
                    <dt class="col-sm-3">Inventory Value</dt>
                    <dd class="col-sm-9">$@((Model.Price * Model.Stock).ToString("F2"))</dd>
                </dl>
                
                @if (Model.Stock > 0)
                {
                    <div class="alert alert-info">
                        <strong>Note:</strong> This shoe still has @Model.Stock units in stock worth $@((Model.Price * Model.Stock).ToString("F2")).
                    </div>
                }
                
                <form asp-action="Delete" method="post" class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> 
                        Yes, Delete This Shoe
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>