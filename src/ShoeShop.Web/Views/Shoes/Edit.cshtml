@model ShoeShop.Infrastructure.Entities.Shoe

@{
    ViewData["Title"] = "Edit Shoe";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title mb-0">Edit Shoe</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Shoe Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter shoe name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Brand" class="form-label">Brand</label>
                                <input asp-for="Brand" class="form-control" placeholder="Enter brand name" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Price" class="form-label">Price ($)</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Price" class="form-control" placeholder="0.00" type="number" step="0.01" min="0" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Stock" class="form-label">Stock Quantity</label>
                                <input asp-for="Stock" class="form-control" placeholder="Enter stock quantity" type="number" min="0" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <button type="submit" class="btn btn-primary">Update Shoe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Current Information</h5>
            </div>
            <div class="card-body">
                <p><strong>ID:</strong> @Model.Id</p>
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Brand:</strong> @Model.Brand</p>
                <p><strong>Price:</strong> $@Model.Price.ToString("F2")</p>
                <p><strong>Stock:</strong> @Model.Stock units</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}