@model IEnumerable<ShoeShop.Infrastructure.Entities.Shoe>

@{
    ViewData["Title"] = "Shoe Inventory";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Shoe Inventory Management</h2>
    <a asp-action="Create" class="btn btn-primary">Add New Shoe</a>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Brand</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var shoe in Model)
                    {
                        <tr>
                            <td><strong>@shoe.Name</strong></td>
                            <td>@shoe.Brand</td>
                            <td>$@shoe.Price.ToString("F2")</td>
                            <td>
                                <span class="badge @(shoe.Stock <= 5 ? "bg-danger" : shoe.Stock <= 15 ? "bg-warning" : "bg-success")">
                                    @shoe.Stock units
                                </span>
                            </td>
                            <td>
                                @if (shoe.Stock <= 5)
                                {
                                    <span class="badge bg-danger">Low Stock</span>
                                }
                                else if (shoe.Stock <= 15)
                                {
                                    <span class="badge bg-warning text-dark">Medium Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">In Stock</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@shoe.Id" class="btn btn-sm btn-info" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@shoe.Id" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@shoe.Id" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-3">
        <small class="text-muted">
            Total shoes: @Model.Count() | 
            Total inventory value: $@Model.Sum(s => s.Price * s.Stock).ToString("F2")
        </small>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">No shoes found!</h4>
        <p>Your shoe inventory is currently empty. Click the "Add New Shoe" button above to get started.</p>
    </div>
}
